<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mag_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="2.4"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/mag_shap_low"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/place_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="56 km DF OF"
        android:textSize="@dimen/sub_title_f_s"
        app:layout_constraintBottom_toTopOf="@+id/country_view"
        app:layout_constraintEnd_toEndOf="@+id/country_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/country_view" />

    <TextView
        android:id="@+id/country_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Slsvical"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mag_view"
        app:layout_constraintEnd_toStartOf="@+id/date_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mag_view"
        app:layout_constraintTop_toTopOf="@+id/mag_view"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:text="2019 5 3"
        android:textSize="@dimen/sub_title_f_s"
        app:layout_constraintBottom_toTopOf="@+id/time_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_view" />

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="20:55 AM"
        android:textSize="@dimen/sub_title_f_s"
        app:layout_constraintBottom_toBottomOf="@+id/country_view"
        app:layout_constraintEnd_toEndOf="@+id/date_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/date_view"
        app:layout_constraintTop_toBottomOf="@+id/date_view" />

</androidx.constraintlayout.widget.ConstraintLayout>